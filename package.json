{
  "name": "gdr-node",
  "description": "Progetto con l'obiettivo di sviluppare un GDR con node/koa",
  "version": "1.0.0",
  "license": "LGPL-2.1-only",
  "type": "module",
  "scripts": {
    "prisma:generate": "npx prisma generate",
    "prisma:migrate:dev": "npx prisma migrate dev",
    "prisma:dev": "npm run prisma:migrate:dev && npm run prisma:generate",
    "db": "npx prisma studio",
    "dev:docker": "docker-compose -f docker-compose.yml up",
    "dev:docker:build": "docker-compose -f docker-compose.yml up --build",
    "dev:docker:down": "docker-compose -f docker-compose.yml down -v",
    "lint": "eslint ./src",
    "dev": "npm run prisma:migrate:dev && npm run prisma:generate && npx tsx watch src/index.ts"
  },
  "dependencies": {
    "@koa/router": "^13.1.0",
    "@prisma/client": "^6.5.0",
    "dotenv": "^16.4.7",
    "koa": "^2.16.0",
    "koa-bodyparser": "^4.4.1",
    "pg": "^8.14.1",
    "prisma": "^6.5.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.23.0",
    "@types/koa__router": "^12.0.4",
    "@types/koa-bodyparser": "^4.3.12",
    "@types/node": "^22.13.13",
    "@types/pg": "^8.11.11",
    "eslint": "^9.23.0",
    "globals": "^16.0.0",
    "nodemon": "^3.1.9",
    "prisma": "^6.5.0",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.28.0"
  }
}
